@{
    ViewData["Title"] = "Pod Details";
}

@model web_ui.Models.PodModel    
       
@{    
        ViewData["Title"] = "Pod Details";    
    }    

 <div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@Html.DisplayFor(model => model.Name)</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Spec
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Pod Id</th>
                                    <th>Namespace</th>
                                    <th>Node</th>
                                    <th>Ready</th>
                                    <th>Status</th>
                                    <th>IP</th>
                                    <th>CreationTimestamp</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="odd gradeX">
                                    <td>@Html.DisplayFor(model => model.Name) </td>
                                    <td>@Html.DisplayFor(model => model.PodNamespace) </td>
                                    <td>@Html.DisplayFor(model => model.NodeName) </td>
                                    <td>@Html.DisplayFor(model => model.Ready) </td>
                                    <td>@Html.DisplayFor(model => model.Status) </td>
                                    <td>@Html.DisplayFor(model => model.IP) </td>
                                    <td>@Html.DisplayFor(model => model.CreationTimestamp) </td>
                                </tr>
                            
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                
        </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Containers</th>
                            </tr>
                        </thead>
                        @* <tbody>
                            <tr class="odd gradeX">
                                <td>@Html.DisplayFor(model => model.LogContent) </td>
                            </tr>
                        </tbody> *@
                    </table>
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>    
                            <tr>
                                <th>    
                                    Name
                                </th>    
                                <th>    
                                    Ready
                                </th>                                    
                                <th>    
                                    Image
                                </th>                                    
                                <th>    
                                    RestartCount
                                </th>                                    
                                <th>    
                                    WorkingDir
                                </th>                                    
                                <th>    
                                    Env. Variables
                                </th>                                    
                                <th>    
                                    Volumes
                                </th>                                    
                            </tr>    
                        </thead>    
                        <tbody>    
                            @foreach (var c in Model.Containers)    
                            {    
                                <tr>    
                                    <td>    
                                        @c.Name    
                                    </td>
                                    <td>    
                                        @c.Ready
                                    </td>    

                                    <td>    
                                        @c.Image
                                    </td>                                        
                                    <td>    
                                        @c.RestartCount
                                    </td> 
                                    <td>    
                                        @if (c.WorkingDir != null) 
                                            @c.WorkingDir
                                    </td> 
                                    <td>
                                        @if (c.Env != null) {
                                        
                                            foreach (var env in c.Env)
                                            {
                                                @String.Format("{0} = {1}", env.Name, env.Value);<br>
                                            }
                                        }
                                    </td> 
                                    <td>
                                        @if (c.Volume != null) {
                                        
                                            foreach (var vol in c.Volume)
                                            {
                                                @vol.MountPath<br>
                                            }
                                        }
                                    </td> 
                                </tr>    

                            }    
                        </tbody>    
                    </table>   
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
</div>
<!-- /.panel-body -->
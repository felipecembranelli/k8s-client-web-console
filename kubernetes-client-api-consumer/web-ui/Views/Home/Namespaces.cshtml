@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<web_ui.Models.NamespaceModel>    
@using Microsoft.AspNetCore.Http;

@{    
        ViewData["Title"] = "Namespaces";    
    }    

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Namespaces</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<table class="table">    
    <thead>    
        <tr>    
            <th>    
                @Html.DisplayNameFor(model => model.Name)    
            </th>    
            <th></th>    
        </tr>    
    </thead>    
    <tbody>    
        @foreach (var item in Model)    
{    
            <tr>    
                <td>    
                    @Html.DisplayFor(modelItem => item.Name)    
                </td>    
                <td>    
                    @{
                        if (item.DefaultNamespace==true)
                        {
                            <a asp-action="setnamespace" asp-route-ns="@item.Name"><b>(Default)</b></a>
                            
                        }
                        else
                        {
                            <a asp-action="setnamespace" asp-route-ns="@item.Name">Set as default</a>
                        }
                    }

                </td>    
            </tr>    
        }    
    </tbody>    
</table>   